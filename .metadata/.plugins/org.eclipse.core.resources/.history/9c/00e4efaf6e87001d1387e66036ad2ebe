package newapp;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Objects;

public class DBHandler {
	
	private final String HOST = "localhost", PORT = "1521", USER = "System", PASSWORD = "manager", SCHEMA = "emp";
	private Connection connection;
	private Statement statement;
	private PreparedStatement preparedStatement;
	
	public void loadDriver() throws ClassNotFoundException {
		Class.forName("orcale.jdbc.driver.OracleDriver");
	}
	
	public Connection getConnection() throws SQLException {
		connection = DriverManager.getConnection("jdbc:oracle:thin:@"+HOST+":"+PORT+":xe", USER, PASSWORD);
		return null;
	}
	
	public PreparedStatement prepareStatement(String query) throws SQLException {
		PreparedStatement preparestatement = connection.prepareStatement("insert into SCHEMA values (?,?,?)");
		return null;
	}
	
	public Statement createStatement() throws SQLException {
		Statement statement = connection.createStatement();
		return null;
	}

	public void closeResources() throws SQLException {
		if(!Objects.isNull(statement) && !Objects.isNull(connection)) {
			statement.close();
			connection.close();
			statement = null;
			connection = null;
		}
	}
	
}
